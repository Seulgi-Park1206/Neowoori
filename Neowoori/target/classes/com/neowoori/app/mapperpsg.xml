<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.neowoori.app.IDaopsg">
	<!-- 내 정보 검색 -->
	<select id="psgUserInfo" resultType="com.neowoori.app.BMembers">
		select * from members where userid=#{param1}
	</select>
	<!-- 내 정보_닉네임 중복 체크 -->
	<select id="psgNickCheck" resultType="Integer">
		select count(*) from members where unick=#{param1}
	</select>
	<!-- 내 정보 수정 -->
	<update id="psgUpdateUserInfo">
		update members set upw=#{param2}, unick=#{param3}, umobile=#{param4}, umail=#{param5} where userid=#{param1}
	</update>
	<select id="psgStudyInfo" resultType="com.neowoori.app.BStudy">
		select * from study where userid=#{param1}
	</select>
</mapper>